<!DOCTYPE html>
<html>
  <head>
    <title>Washington Heights Academy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag asset_path('Pencil.png'), :rel => 'icon', :type => 'image/png' %>
  </head>
  <div class="jumbotron jumboCustomize py-2">
    <div class="row">
      <div class="col-lg-12 text-center">
        <span class="JumboTitle">Washington Height's Academy Database</span>
      </div>
    </div>
    <div class="row text-center">
      <div class="col-lg-12 mx-auto">
        <%= link_to root_path do %>
        <%= image_tag image_path('/head_img.png'), class:'headImg' %>
      <% end %>
    </div>
  </div>

</div>
<body class="<%=controller_name %> <%= action_name %>">

  <%= yield %>
  <div class="brownFooter"></div>
</body>
</html>
