<div class="container-fluid">
  <div class="row">
    <div class="headingTitles mx-auto">
      <h1>Create A New Course
      </h1>
    </div>
  </div>
  <%= form_for @course do |f| %>

  <div class="row">
    <div class="col-lg-6 mx-auto py-1">
      <%= f.label :name %>
      <%= f.text_field :name, class:'form-control' %>
    </div>

  </div>
  <div class="row">
    <div class="col-lg-6 mx-auto py-1">
      <%= f.label :total_class_hours%>
      <%= f.text_field :total_class_hours, class:'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12 mx-auto text-center py-1">
      <%=f.submit "Create Course", class:'btn secondButton'%>
    </div>
  </div>

<% end %>

</div>
