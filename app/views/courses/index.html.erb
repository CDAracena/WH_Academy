<h1>Welcome To The Courses Database </h1>

<%= link_to 'Add A New Course', new_course_path %>

<div>
<% @courses.each do |course| %>

<div>
  <%= course.name %> |
  <%= link_to "View Course Information", course_path(course) %> |
  <%= link_to "Edit Course", edit_course_path(course) %> |
  <%= link_to 'Delete Course', course_path(course), method: :delete %>

</div>

<% end %>
</div>
