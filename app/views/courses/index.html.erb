<div class="container">
  <div class="row">
    <div class="headingTitles mx-auto py-4">
      <h1>Courses Database
      </h1>
    </div>
  </div>
  <div class="row mx-auto">
    <div class="col-lg-12 mx-auto">
      <div>
        <%= link_to 'View Student Database', students_path, class:'MainNav' %>
        |
        <%= link_to 'View Instructor Database', instructors_path, class:'MainNav' %>
        |
        <%= link_to 'View Courses Database', courses_path, class:'MainNav' %>
        |
        <%= link_to 'View Cohorts Database', cohorts_path, class:'MainNav' %>
        |
        <%= link_to 'View Current Cohorts', active_cohorts_path, class:'MainNav' %>
      </div>
    </div>
  </div>
  <div class="row mx-auto text-center">
    <div class="col-lg-12 text-center mx-auto">
      <%= link_to 'Add A New Course', new_course_path, class:'btn addBtns' %>
    </div>
  </div>
  <div class="row mx-auto">
    <div class="col-lg-6 mx-auto py-2">
      <% @courses.each do |course| %>

        <div class="py-1 main-Course">
          <%= course.name %>
           <br>
          <%= link_to "View Course Information", course_path(course), class:'UserLinks btn' %>
          |
          <%= link_to "Edit Course", edit_course_path(course), class:'UserLinks btn' %>
          |
          <%= link_to 'Delete Course', course, class:'deleteCall btn UserLinks' %>

        </div>

      <% end %>
    </div>
  </div>
</div>
