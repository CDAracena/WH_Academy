<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center py-4">
      <h1>
        Student's Page</h1>
    </div>
  </div>
  <div class="row mx-auto">
    <div class="col-lg-12 mx-auto">
      <div>
        <%= link_to 'View Student Database', students_path, class:'MainNav' %>
        |
        <%= link_to 'View Instructor Database', instructors_path, class:'MainNav' %>
        |
        <%= link_to 'View Courses Database', courses_path, class:'MainNav' %>
        |
        <%= link_to 'View Cohorts Database', cohorts_path, class:'MainNav' %>
        |
        <%= link_to 'View Current Cohorts', active_cohorts_path, class:'MainNav' %>
      </div>
    </div>
  </div>
<div class="row mx-auto text-center">
  <div class="colg-lg-12 text-center mx-auto">
  <%= link_to 'Add A New Student', new_student_path, class:'btn addBtns' %>
</div>
</div>

  <div class="row mx-auto">
    <div class="col-lg-6 mx-auto py-2">

    <% @students.each do |student| %>
      <div class="py-1">
        <%= student.first_name %>
        <%= student.last_name %>
        <br>
        <%= link_to 'Edit Student', edit_student_path(student), class:'UserLinks btn'%>
        |
        <%= link_to 'View Student Information', student_path(student), class:'UserLinks btn' %>
        |
        <%= link_to 'Delete Student', student_path(student), method: :delete, class:'UserLinks btn' %>
      </div>

    <% end %>
  </div>
  </div>

</div>
